#include <iostream>
using namespace std;
int globalVar = 10;
int main() {
    int localVar = 20;
    int* heapVar = new int(30);

    // Printing addresses
    cout << "Address of global variable: " << &globalVar << endl;
    cout << "Address of local variable: " << &localVar << endl;
    cout << "Address of heap variable: " << heapVar << endl;
    // Free heap memory
    delete heapVar;

    return 0;
